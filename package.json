{
  "name": "@coda/monorepo",
  "private": true,
  "description": "Live-coding for movement interaction",
  "scripts": {
    "prepare": "npm run bootstrap && lerna run prepare",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream --ignore @coda/docs",
    "watch": "cross-env NODE_ENV=development BABEL_ENV=build rollup -c -w",
    "dev": "concurrently --kill-others -p \"[{name}]\" -n \"libs,editor\" -c \"bgMagenta.bold,bgBlue.bold\" \"npm run watch\" \"cd playground && yarn dev\"",
    "playground:dev": "cd playground && yarn dev",
    "playground:start": "cd playground/dist && python -m http.server",
    "socket": "node playground/server.js",
    "docs:api": "cd docs && yarn api",
    "docs:prepare": "cd docs && npm run docs:prepare",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "npm run build --ignore @coda/playground && npm run docs:prepare && npm run docs:build",
    "lint": "eslint --ext .js,.vue packages/*/src packages/*/test playground/src docs/pages docs/components docs/layouts",
    "release": "lerna publish --ignore @coda/docs @coda/playground",
    "test": "jest",
    "benchmark": "lerna run benchmark --stream",
    "clean": "lerna clean --yes && rm -rf docs/dist playground/dist && rm -rf `find packages -type d -name dist` && rm -rf coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JulesFrancoise/coda"
  },
  "author": "me@julesfrancoise.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "@most/core": "^1.3.4",
    "@vue/cli-plugin-babel": "^3.6.0",
    "@vue/cli-plugin-eslint": "^3.6.0",
    "@vue/cli-service": "^3.6.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "benchmark": "^2.1.4",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^5.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "documentation": "^12.1.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-vue": "^5.2.2",
    "jest": "^24.7.1",
    "lerna": "^3.13.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.0",
    "rollup-plugin-analyzer": "^3.0.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-visualizer": "^2.7.2",
    "rollup-plugin-vue": "^4.7.2",
    "vue-template-compiler": "^2.5.17",
    "vuepress": "^1.2.0",
    "webpack": "^4.16.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  }
}
