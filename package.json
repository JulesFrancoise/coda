{
  "name": "@coda/monorepo",
  "private": true,
  "description": "Live-coding for movement interaction",
  "scripts": {
    "prepare": "npm run bootstrap && lerna run prepare",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream --ignore @coda/docs",
    "watch": "cross-env NODE_ENV=development BABEL_ENV=build rollup -c -w",
    "dev": "concurrently --kill-others -p \"[{name}]\" -n \"libs,editor\" -c \"bgMagenta.bold,bgBlue.bold\" \"npm run watch\" \"cd playground && yarn dev\"",
    "lint": "lerna run lint",
    "release": "lerna publish --ignore @coda/docs @coda/playground",
    "test": "lerna run test --stream",
    "benchmark": "lerna run benchmark --stream",
    "clean": "lerna clean --yes && rm -rf docs/dist playground/dist && rm -rf `find packages -type d -name dist` && rm -rf `find packages -type d -name coverage`"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JulesFrancoise/coda"
  },
  "author": "me@julesfrancoise.com",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.4.2",
    "lerna": "^3.4.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.5",
    "rollup-plugin-analyzer": "^2.1.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-minify-es": "^1.1.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-vue": "^4.3.2",
    "vue-template-compiler": "^2.5.17"
  }
}
