{
  "name": "@coda/monorepo",
  "private": true,
  "description": "Live-coding for movement interaction",
  "scripts": {
    "prepare": "npm run bootstrap && lerna run prepare",
    "bootstrap": "lerna bootstrap --hoist",
    "clean": "lerna clean --yes",
    "build": "lerna run build",
    "watch": "NODE_ENV=development BABEL_ENV=build rollup -c -w",
    "build-client": "lerna run build-client",
    "dev": "concurrently --kill-others -p \"[{name}]\" -n \"libs,editor\" -c \"bgMagenta.bold,bgGreen.bold\" \"npm run watch\" \"cd packages/editor && yarn dev\"",
    "dev2": "concurrently --kill-others \"npm run watch\" \"lerna run dev --scope=@coda/editor\"",
    "lint": "lerna run lint",
    "release": "lerna publish",
    "test": "lerna run test",
    "test:unit": "lerna run test:unit",
    "test:lint": "lerna run test:lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JulesFrancoise/coda"
  },
  "author": "me@julesfrancoise.com",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "lerna": "^2.11.0",
    "nyc": "^11.7.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.5",
    "rollup-plugin-analyzer": "^2.1.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-minify-es": "^1.1.1",
    "rollup-plugin-node-resolve": "^3.3.0"
  }
}
