{
  "name": "@coda/docs",
  "version": "0.0.1",
  "description": "coda.js documentation",
  "author": "Jules FrancÌ§oise <me@julesfrancoise.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "copylib": "cp ../packages/all/dist/index.js ./static/coda.js",
    "dev": "yarn doc --watch & nuxt",
    "build": "yarn copylib && yarn doc && nuxt build",
    "start": "yarn doc && nuxt start",
    "generate": "yarn copylib && yarn doc && nuxt generate",
    "doc": "documentation build ../packages/**/src/index.js -f json -o pages/api.json --sort-order alpha --config documentation.yml",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@coda/sandbox": "^0.0.1",
    "@nuxtjs/markdownit": "^1.2.1",
    "documentation": "^8.1.0",
    "element-ui": "^2.4.8",
    "nuxt": "^2.3.4",
    "prismjs": "^1.15.0",
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-vue": "^4.7.1"
  }
}
